#include<stdio.h>
#include<stdlib.h>
#include<math.h>

/*1) Faça um programa que receba a altura de uma
pessoa e calcule e exiba seu peso ideal utilizando a
seguinte:
peso ideal = 72.7 x altura – 58
*/

int main() {

float altura;
printf("Digite sua altura : ");
scanf("%f",&altura);
float pesoIdeal = 72.7 * altura - 58;

printf("O peso ideal é %2.f\n", pesoIdeal);


 return 0;
}
